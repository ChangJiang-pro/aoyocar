@import "../../../commpents/navbar.wxss";
.search{
    width: 100%;
    height: 120rpx;
    padding: 20rpx;
    box-sizing: border-box;
    background-color: #fff;
    position: fixed;
    left:0;
    z-index: 999;
}
.search .content{
    width: 100%;
    height: 100%;
    position: relative;
}
.search input{
    width: 100%;
    height: 70rpx;
    padding-left: 60rpx;
    box-sizing: border-box;
    border-radius: 30rpx;
    background-color: rgba(246,246,246,1);
    font-size: 24rpx;
}
.search image{
    width: 30rpx;
    height: 30rpx;
    position: absolute;
    top: 20rpx;
    left: 20rpx;
}
.list{
    width: 100%;
    height: 100%;
    position: relative;
    top:120rpx;
    left: 0;
}
.hotBrand{
    width: 100%;
    height: 250rpx;
    padding: 0 20rpx;
    box-sizing: border-box;
}
.header{
    width: 100%;
    height: 50rpx;
    font-size: 30rpx;
}
.hotBrand .content{
    width: 100%;
    height: 200rpx;
    padding: 10rpx;
    box-sizing: border-box;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 24rpx;
}
.hotBrand .content .items{
    width: 20%;
    height: 100%;
    display: flex;
    align-items: center;
    flex-flow: column;
    justify-content: center;
}
.hotBrand .content .items image{
    width: 70rpx;
    height: 70rpx;
    margin-bottom: 10rpx;
}

.city-scroll {
    left: 0;
    position: fixed;
    height: 100%;
    width: 690rpx;
    padding: 0 40rpx 0 10rpx;
}

.search-nav {
    position: fixed;
    bottom: 50rpx;
    right: 5rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    padding: 0 20rpx;
}

.search-nav text {
    text-align: center;
    font-size: 24rpx;
}


.city {
    font-size: 24rpx;
    padding-bottom: 10rpx;
    border-bottom: 1rpx solid #fff;
    height: 30rpx;
    line-height: 30rpx;

}

.show-city {
    display: flex;
    align-items: center;
    height: 80rpx;
}
.show-city image{
    width: 30rpx;
    height: 30rpx;
    margin-right: 30rpx;
}

.show-city text {
    margin-top: 10rpx;
    margin-bottom: 10rpx;
    font-size: 28rpx;
}

::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}
.city-list .nav-text{
    display: flex;
    align-items: center;
    font-size: 34rpx;
    color: #000;
    background-color: #f6f6f6;
    height:70rpx;
}
.city-list{
    margin-bottom: 240px;
    padding-left: 20rpx;
    box-sizing: border-box;
}
.proup_content .title{
    width: 100%;
    height: 120rpx;
    display: flex;
    align-items: center;
    padding: 0 20rpx;
    font-size: 34rpx;
    box-sizing: border-box;
}
.proup_content .title image{
    width: 60rpx;
    height: 60rpx;
    margin-right: 20rpx;
}
.proup_content .select{
    width: 100%;
    height: 100%;
    background-color: #fff;
}
.proup_content .select .select_header{
    width: 100%;
    height: 60rpx;
    background-color: #f6f6f6;
    font-size: 26rpx;
    display: flex;
    align-items: center;
    padding-left: 20rpx;
    box-sizing: border-box;
}
.proup_content .select .select_con{
    width: 100%;
    background-color: #fff;
    font-size: 24rpx;
    padding-left: 20rpx;
    box-sizing: border-box;
}
.proup_content .select .select_con .items{
    width: 100%;
    height: 60rpx;
    display: flex;
    align-items: center;
}
