<view class="nav-bar" style="height:{{navBarHeight}}px;">
		<view class="back" style="height:{{menuHeight}}px; min-height:{{menuHeight}}px; line-height:{{menuHeight}}px;  bottom:{{menuBotton}}px;" bindtap="backMyOne">
			<view class="backBu">
				<text></text>
				<view style="width:120rpx"></view>
			</view>
		</view>
</view>

<view class="cates">
<!-- 自定义导航栏 start -->

  <!-- 搜索框开始 -->
  <view class="search" bindtap="goSearch">
			<van-search shape="round" placeholder="请输入商品名称进行搜索" />
	</view>
	<!-- 搜索框结束 -->
	
	<view class="cates_container">
    <!-- 左侧菜单 -->
    <scroll-view scroll-y class="left_menu">
      <view class="menu_item {{index === currentIndex ? 'active' : ''}}"
      wx:for="{{leftMenuList}}"
      wx:key="index"
      bindtap="handleItemTap"
      data-index="{{index}}">
        {{item}}
      </view>
    </scroll-view>
    <!-- 右侧菜单 -->
    <scroll-view scroll-y scroll-top="{{scrollTop}}" class="right_content">
      <view class="content_item"
      wx:for="{{rightContentList}}"
      wx:for-item="item1"
      wx:key="appClassId">
        <view class="content_title">
          <text class="decoration">—</text>
          <text class="cat_name">{{item1.appClassName}}</text>
          <text class="decoration">—</text>
        </view>
        <view class="content_list">
        <navigator
            wx:for="{{item1.children}}"
            wx:for-item="item2"
            url="/pages/classify/goods/index?appClassId={{item2.appClassId}}">
            <image mode="widthFix" src="{{item2.appClassIcon}}"></image>
            <text>{{item2.appClassName}}</text>
        </navigator>
        </view>
      </view>
    </scroll-view>
  </view>
</view>