<view>
	<!-- 自定义导航栏 start -->
	<view class="nav-bar" style="height:{{navBarHeight}}px;">
		<view class="back" style="height:{{menuHeight}}px; min-height:{{menuHeight}}px; line-height:{{menuHeight}}px;  bottom:{{menuBotton}}px;" bindtap="backHome">
			<view class="backBu">
				<view class="back-content">
					<view style="width:40%" bindtap="backMy">
						<van-icon name="arrow-left" />
					</view>
					<view style="width:20%">
						<image src="../../../img/line.png"></image>
					</view>
					<view style="width:40%" bindtap="backHome">
						<van-icon name="home-o" />
					</view>
				</view>
				<text>订单列表</text>
				<view style="width:120rpx"></view>
			</view>
		</view>
	</view>
	<!-- 自定义导航栏 end -->
	<view class="content" style="margin-top:{{navBarHeight}}px">
		<view class="con_del">
			<view class="header">
				<van-tabs active="{{ active }}" bind:change="onChange" swipeable swipe-threshold="5">
					<van-tab title="全部">
						<view class="line"></view>
						<view class="items" wx:for="{{list}}">
							<view class="items-t">
								<view class="items-t-l">
									<image src="../../../img/dianpu1.png"></image>{{item.shopName}}
								</view>
								<view class="items-t-r">{{item.type}}</view>
							</view>
							<view class="items-m">
								<view class="items-m-l">
									<image src="{{item.shopimg}}"></image>
								</view>
								<view class="items-m-m">
									<view>{{item.shoppName}}</view>
									<view>{{item.shoppType}}</view>
								</view>
								<view class="items-m-r">
                                    <view style="font-size:28rpx">￥{{item.shoppMoney}}.00</view>
                                    <view>x{{item.shoppNumber}}</view>
                                </view>
							</view>
							<view class="items-b">
                                <text wx:if="{{item.type=='待支付'}}">去支付</text>
                                <text wx:if="{{item.type=='进行中' || item.type=='已完成' || item.type=='待评价'}}">加入购物车</text>
                                <text wx:if="{{item.type=='进行中' || item.type=='已完成' || item.type=='待评价'}}">查看物流</text>
                                <text wx:if="{{item.type=='待评价'}}" bindtap="goevaluate">去评价</text>
							</view>
						</view>
					</van-tab>
					<van-tab title="待支付">
						<view class="line"></view>
					</van-tab>
					<van-tab title="进行中">
						<view class="line"></view>
					</van-tab>
					<van-tab title="待评价">
						<view class="line"></view>
					</van-tab>
					<van-tab title="已完成">
						<view class="line"></view>
					</van-tab>
				</van-tabs>
			</view>
		</view>
	</view>
</view>