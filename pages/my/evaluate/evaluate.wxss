@import "../../../commpents/navbar.wxss";
page{
    background-color: #f6f6f6;
}
.content-t{
    width: 100%;
    height: 250rpx;
    background-color: #fff;
    padding: 20rpx;
    box-sizing: border-box;
    margin-bottom: 20rpx;
}
.content-shopp{
    width: 100%;
    height: 60%;
    display: flex;
}
.content-star{
    width: 100%;
    height: 40%;
    display: flex;
    align-items: center;
    padding-left: 20rpx;
}
.content-shopp .shoppimg{
    width: 20%;
    height: 100%;
    padding: 20rpx;
    box-sizing: border-box;
}
.content-shopp .shoppimg image{
    width: 100%;
    height: 100%;
}
.shoppdetail {
    padding: 20rpx 0;
    box-sizing: border-box;
}
.shoppdetail view:nth-child(1){
    font-size: 28rpx;
    display: -webkit-box;
    overflow: hidden;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
}
.shoppdetail view:nth-child(2){
    font-size: 24rpx;
    color: #999999;
    margin-top: 20rpx;
}
.content-star .red{
    width: 40rpx;
    height: 40rpx;
}
.content-star .ccc{
    width: 25rpx;
    height: 25rpx;
    margin-left: 7rpx;
    margin-right: 5rpx;
}
.content-star .number{
    font-size: 26rpx;
    color: #999;
}
.star{
    width: 25%;
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-left: 25rpx;
}
.evaluateContent{
    width: 100%;
    background-color: #fff;
    padding: 20rpx 20rpx 20rpx 30rpx;
    box-sizing: border-box;
}
.evaluateContent-h{
    width: 100%;
    height: 50rpx;
}
.evaluateContent-h image{
    width: 100rpx;
    height: 60%;
}
.evaluateContent-con{
    width: 100%;
    position: relative;
}
.evaluateContent-con image{
    width: 20rpx;
    height:20rpx;
    position: absolute;
    top: 28rpx;
    left: 5rpx;
}
.evaluateContent-con textarea{
    padding-left: 40rpx;
    box-sizing: border-box;
    width: 100%;
    padding-top: 20rpx;
    font-size: 26rpx;
}
.uploadimg{
    width: 100%;
    height: 200rpx;
    margin-top: 20rpx;
}
.submit {
    width: 100%;
    height: 100rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    position: fixed;
    left: 0;
    bottom: 80rpx;
}

.submit view {
    width: 60%;
    height: 100%;
    background: linear-gradient(90deg, rgba(255, 140, 101, 1) 0%, rgba(255, 89, 68, 1) 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    color: #fff;
    font-size: 32rpx;
    border-radius: 60rpx;
}