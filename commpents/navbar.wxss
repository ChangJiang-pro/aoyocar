
.nav-bar {
    position: fixed;
    width: 100%;
    top: 0;
    border-bottom: 1px solid #ccc;
    z-index: 9999;
    background-color: #fff;
}

.nav-bar .back {
    width: 100%;
    position: absolute;
}

.back-content {
    width: 120rpx;
    border: 1px solid rgb(226, 220, 220);
    padding: 10rpx 0;
    border-radius: 30rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.nav-bar .back .backBu {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    padding: 0 10rpx 0 20rpx;
    justify-content: space-between;
    box-sizing: border-box;
}

.nav-bar .back view {
    display: flex;
    align-items: center;
    justify-content: center;
}


.nav-bar .back image {
    width: 30rpx;
    height: 30rpx;
}